<h1 class="mb-1">修改行程</h1>
<div class="container">
  <form action="/schedule/{{ schedule._id }}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="date" class="col-sm-5">日期</label>
      <div class="col-sm-9">
        <input type="date" class="form-control" id="date" name="date" value="{{schedule.date}}">
      </div>
    </div>

    <div class="mb-3">
      <label for="memo" class="col-sm-5">memo</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" id="memo" name="memo" value="{{schedule.memo}}">
      </div>
    </div>

    <div class="mb-3">
      <label for="reminder" class="col-sm-5">reminder</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" id="reminder" name="reminder" value="{{schedule.reminder}}">
      </div>
    </div>


      <div class="text-center">
        <button type="submit" class="btn btn-outline-dark">送出</button>
        <a href="/schedule/{{ schedule._id }}"><button type="button" class="btn btn-outline-secondary">返回</button></a>
      </div>
  </form>
</div>